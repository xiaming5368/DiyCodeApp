<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
    </style>

    <style name="DrawerArrow" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#62646c</item>
    </style>

    <style name="ThemeToolbar" parent="ThemeOverlay.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">#62646c</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#62646c</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 用于开启滑动返回功能的 Activity -->
    <style name="AppTheme.NoActionBar.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="list_view_style">
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:divider">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:animationCache">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>
